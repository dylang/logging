{
  "compilerOptions": {
    "pretty": true,
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
