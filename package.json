{
  "name": "logging",
  "version": "5.0.0-beta.1",
  "description": "Lightweight informative modern console logging.",
  "type": "module",
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.cjs",
      "browser": "./lib/browser.js"
    }
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "start": "node src/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/ava --verbose && pnpm example",
    "update-snapshots": "node --experimental-vm-modules node_modules/.bin/ava --verbose --update-snapshots",
    "lint": "eslint -c .eslintrc.json . --fix",
    "build": "pnpm build:esm && pnpm build:cjs && pnpm build:browser",
    "build:esm": "babel src --out-dir=lib --extensions='.js' --keep-file-extension",
    "build:cjs": "babel src --out-dir=lib/cjs --extensions='.js' --out-file-extension=.cjs --plugins=@babel/plugin-transform-modules-commonjs",
    "build:browser": "babel src/browser.js --out-dir=lib --extensions='.js' --keep-file-extension",
    "example": "node examples/simple.js",
    "prepublish": "pnpm build"
  },
  "repository": "http://github.com/dylang/logging",
  "author": "Dylan Greene <dylang@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "debug": "^4.3.4",
    "nicely-format": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "ava": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-xo": "^0.44.0",
    "eslint-plugin-import": "^2.29.1",
    "mockdate": "^3.0.5",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">= 20"
  },
  "ava": {
    "nodeArguments": [
      "--experimental-vm-modules"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
